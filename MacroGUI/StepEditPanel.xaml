<UserControl x:Class="MacroGUI.StepEditPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MacroGUI"
             mc:Ignorable="d" 
             PreviewKeyDown="StepEditPanel_PreviewKeyDown"
             >
    
    <UserControl.Resources>
        <Style x:Key="DigitsOnlyTextBoxStyle" TargetType="TextBox">
            <EventSetter Event="PreviewTextInput" Handler="DigitsOnly_PreviewTextInput"/>
            <EventSetter Event="DataObject.Pasting" Handler="DigitsOnly_Pasting"/>
        </Style>
        <Style x:Key="CaptureKeyButtonStyle" TargetType="Button">
            <EventSetter Event="Click" Handler="CaptureKeyButton_Click"/>
        </Style>
    </UserControl.Resources>
    
    <Border Background="#E3F2FD" CornerRadius="6" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="STEP 수정"
           FontSize="14"
           FontWeight="Bold"
           Margin="0,0,0,8"/>

            <Border Height="1"
        Background="#90CAF9"
        Margin="0,15,0,0"/>

            <ContentControl Grid.Row="2" Content="{Binding SelectedStep, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <!-- 기본: 선택 없음 -->
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock Text="좌측에서 Step을 선택하세요."
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Opacity="0.7"/>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <!-- Tap -->
                            <DataTrigger Binding="{Binding SelectedStep.Type, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Tap">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Center" Width="180">

                                                <TextBlock Text="Tap"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,1"/>

                                                <TextBlock Text="Key"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,3"/>

                                                <!-- 현재 Key 표시 (읽기 전용) -->
                                                <TextBox x:Name="KeyDisplayTextBox"
                                                Height="20"
                                                 IsReadOnly="True"
                                                 HorizontalContentAlignment="Center"
                                                Text="{Binding SelectedStep.Key, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                 Margin="0,0,0,5"/>

                                                <!-- 키 캡처 버튼 -->
                                                <Button Style="{StaticResource CaptureKeyButtonStyle}" 
                                                        x:Name="CaptureKeyButton" 
                                                        Height="20"
                                                        Content="키 입력 받기"
                                                        />

                                                <TextBlock x:Name="CaptureHintText"
                                                   Text=""
                                                   HorizontalAlignment="Center"
                                                   Margin="0,6,0,0"
                                                   Opacity="0.7"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>

                            <!-- Delay -->
                            <DataTrigger Binding="{Binding SelectedStep.Type, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="Delay">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="3"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="3"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Text="Delay" FontWeight="SemiBold"/>

                                                <Grid Grid.Row="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="10"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="Min (ms)" VerticalAlignment="Center"/>
                                                    <TextBox Grid.Column="2" Height="25" VerticalContentAlignment="Center"
                                                     Style="{StaticResource DigitsOnlyTextBoxStyle}"
                                                     Text="{Binding MinMs, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <StackPanel Grid.Row="4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="10"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Text="Max (ms)" VerticalAlignment="Center"/>
                                                        <TextBox Grid.Column="2" Height="25" VerticalContentAlignment="Center"
                                                         Style="{StaticResource DigitsOnlyTextBoxStyle}"
                                                         Text="{Binding MaxMs, UpdateSourceTrigger=PropertyChanged}"/>
                                                    </Grid>

                                                    <!-- 경고 메시지 -->
                                                    <TextBlock Text="{Binding DelayRangeError}"
                                                       Foreground="Red"
                                                       FontSize="10"
                                                       Margin="0,0,0,0"
                                                       TextWrapping="Wrap">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding DelayRangeError}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding DelayRangeError}" Value="">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>

                                            </Grid>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>

                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>
    </Border>
</UserControl>
