<Window x:Class="MacroGUI.HotkeyCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroGUI"
        mc:Ignorable="d"
        Title="핫키 변경" Width="360" Height="160"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Border Padding="16">
        <StackPanel>
            <TextBlock Text="원하는 키 조합을 누르세요"
                       FontWeight="SemiBold" FontSize="14" Margin="0,0,0,6"/>
            <TextBlock Text="예) ALT + A, CTRL + SHIFT + F1"
                       Opacity="0.7" Margin="0,0,0,12"/>
            <Border Background="#11000000" CornerRadius="6" Padding="10">
                <TextBlock x:Name="TbPreview" Text="입력 대기..."
                           FontSize="14"/>
            </Border>
            <TextBlock Text="ESC: 취소"
                       Opacity="0.6" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</Window>
